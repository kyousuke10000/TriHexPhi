{
  "info": {
    "name": "KYOEN Workflows",
    "description": "KYOEN LINE workflows test collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Event Detect",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-Line-Signature",
            "value": "dummy-signature"
          }
        ],
        "body": {
          "mode": "file",
          "file": {
            "src": "../payloads/line_text_event.json"
          }
        },
        "url": {
          "raw": "{{webhook_url}}/webhook/kyoen-line-in",
          "host": ["{{webhook_url}}"],
          "path": ["webhook", "kyoen-line-in"]
        }
      }
    },
    {
      "name": "Quick Reply",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{line_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"replyToken\": \"{{reply_token}}\",\n  \"messages\": [\n    {\n      \"type\": \"text\",\n      \"text\": \"受け付けました。少々お待ちください。\"\n    }\n  ]\n}"
        },
        "url": {
          "raw": "https://api.line.me/v2/bot/message/reply",
          "protocol": "https",
          "host": ["api", "line", "me"],
          "path": ["v2", "bot", "message", "reply"]
        }
      }
    },
    {
      "name": "Push Message",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{line_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"to\": \"{{user_id}}\",\n  \"messages\": [\n    {\n      \"type\": \"text\",\n      \"text\": \"テストメッセージ\"\n    }\n  ]\n}"
        },
        "url": {
          "raw": "https://api.line.me/v2/bot/message/push",
          "protocol": "https",
          "host": ["api", "line", "me"],
          "path": ["v2", "bot", "message", "push"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "webhook_url",
      "value": "https://your-n8n-instance.com"
    },
    {
      "key": "line_token",
      "value": "your-line-token"
    },
    {
      "key": "reply_token",
      "value": "your-reply-token"
    },
    {
      "key": "user_id",
      "value": "your-user-id"
    }
  ]
}
